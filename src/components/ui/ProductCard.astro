---
export interface Props {
	image: string
	title: string
	description: string
	price: string
	alt?: string
}

const { image, title, description, price, alt } = Astro.props
---

<div
	class="bg-white rounded-2xl shadow-lg overflow-hidden group hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
>
	<!-- Imagen -->
	<div class="relative overflow-hidden">
		<img
			src={image}
			alt={alt || title}
			class="w-full h-48 md:h-56 object-cover group-hover:scale-105 transition-transform duration-300"
		/>
		<!-- Overlay sutil en hover -->
		<div
			class="absolute inset-0 bg-pink-500/0 group-hover:bg-pink-500/10 transition-all duration-300"
		>
		</div>
	</div>

	<!-- Contenido -->
	<div class="p-6 space-y-4">
		<h3
			class="text-xl md:text-2xl font-bold text-pink-400 group-hover:text-pink-500 transition-colors duration-300"
		>
			{title}
		</h3>

		<p class="text-gray-600 text-sm md:text-base leading-relaxed">
			{description}
		</p>

		<div class="pt-2">
			<p class="text-lg md:text-xl font-bold text-pink-500">
				{price}
			</p>
		</div>
	</div>
</div>

