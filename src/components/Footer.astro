---
import {
	Facebook,
	Instagram,
	Music,
	Youtube,
	MapPin,
	Phone,
	Mail,
	Clock,
} from "@lucide/astro"

// Obtener el año actual dinámicamente
const currentYear = new Date().getFullYear()

// Lista de servicios
const services = [
	"Pasteles Personalizados",
	"Eventos Especiales",
	"Entrega a Domicilio",
	"Clases de Repostería",
	"Catering Dulce",
]
---

<footer class="bg-gray-900 text-white relative overflow-hidden">
	<!-- Elementos decorativos de fondo -->
	<div
		class="absolute top-0 left-0 w-full h-full pointer-events-none overflow-hidden"
	>
		<div
			class="absolute top-10 right-20 w-32 h-32 bg-pink-500/5 rounded-full blur-3xl"
		>
		</div>
		<div
			class="absolute bottom-20 left-10 w-24 h-24 bg-pink-400/5 rounded-full blur-2xl"
		>
		</div>
	</div>

	<div
		class="relative z-10 px-4 sm:px-8 md:px-16 lg:px-32 xl:px-72 py-12 md:py-16"
	>
		<!-- Contenido principal del footer -->
		<div class="grid grid-cols-1 md:grid-cols-3 gap-10">
			<!-- Columna 1: Logo e información -->
			<div class="space-y-6 text-center md:text-left mb-8 md:mb-0">
				<!-- Logo -->
				<div class="space-y-4">
					<div class="flex items-center gap-2 justify-center md:justify-start">
						<img
							src="/favicon.svg"
							alt="SugarBloom Logo"
							class="w-8 h-8 md:w-10 md:h-10"
						/>
						<span class="text-xl md:text-2xl font-bold text-white"
							>SugarBloom</span
						>
					</div>
					<p
						class="text-gray-300 text-sm md:text-base leading-relaxed max-w-xs mx-auto md:mx-0"
					>
						Endulzando momentos especiales desde 2015
					</p>
				</div>

				<!-- Redes sociales -->
				<div class="space-y-4">
					<div class="flex gap-3 justify-center md:justify-start">
						<a
							href="https://facebook.com"
							target="_blank"
							rel="noopener noreferrer"
							class="w-10 h-10 md:w-12 md:h-12 bg-pink-500 hover:bg-pink-600 rounded-full flex items-center justify-center transition-all duration-300 transform hover:scale-110 hover:shadow-lg hover:shadow-pink-500/25"
						>
							<Facebook class="w-5 h-5 md:w-6 md:h-6 text-white" />
						</a>
						<a
							href="https://instagram.com"
							target="_blank"
							rel="noopener noreferrer"
							class="w-10 h-10 md:w-12 md:h-12 bg-pink-500 hover:bg-pink-600 rounded-full flex items-center justify-center transition-all duration-300 transform hover:scale-110 hover:shadow-lg hover:shadow-pink-500/25"
						>
							<Instagram class="w-5 h-5 md:w-6 md:h-6 text-white" />
						</a>
						<a
							href="https://tiktok.com"
							target="_blank"
							rel="noopener noreferrer"
							class="w-10 h-10 md:w-12 md:h-12 bg-pink-500 hover:bg-pink-600 rounded-full flex items-center justify-center transition-all duration-300 transform hover:scale-110 hover:shadow-lg hover:shadow-pink-500/25"
						>
							<Music class="w-5 h-5 md:w-6 md:h-6 text-white" />
						</a>
						<a
							href="https://youtube.com"
							target="_blank"
							rel="noopener noreferrer"
							class="w-10 h-10 md:w-12 md:h-12 bg-pink-500 hover:bg-pink-600 rounded-full flex items-center justify-center transition-all duration-300 transform hover:scale-110 hover:shadow-lg hover:shadow-pink-500/25"
						>
							<Youtube class="w-5 h-5 md:w-6 md:h-6 text-white" />
						</a>
					</div>
				</div>
			</div>

			<!-- Columna 2: Servicios -->
			<div class="space-y-6 text-center md:text-left mb-8 md:mb-0">
				<h3 class="text-xl md:text-2xl font-bold text-pink-400">Servicios</h3>
				<ul class="space-y-3">
					{
						services.map((service) => (
							<li>
								<a
									href="#"
									class="text-gray-300 hover:text-pink-400 transition-all duration-300 text-sm md:text-base block py-1 hover:translate-x-1"
								>
									{service}
								</a>
							</li>
						))
					}
				</ul>
			</div>

			<!-- Columna 3: Contacto -->
			<div class="space-y-6 text-center md:text-left mb-8 md:mb-0">
				<h3 class="text-xl md:text-2xl font-bold text-pink-400">Contacto</h3>
				<div class="space-y-4">
					<!-- Dirección -->
					<div class="flex items-start gap-3 justify-center md:justify-start">
						<div class="flex-shrink-0 w-5 h-5 md:w-6 md:h-6 mt-1">
							<MapPin class="w-full h-full text-pink-400" />
						</div>
						<p class="text-gray-300 text-sm md:text-base">
							Calle 123 #45-67, Bogotá
						</p>
					</div>

					<!-- Teléfono -->
					<div class="flex items-center gap-3 justify-center md:justify-start">
						<div class="flex-shrink-0 w-5 h-5 md:w-6 md:h-6">
							<Phone class="w-full h-full text-pink-400" />
						</div>
						<a
							href="tel:+573001234567"
							class="text-gray-300 hover:text-pink-400 transition-all duration-300 text-sm md:text-base hover:translate-x-1"
						>
							+57 300 123 4567
						</a>
					</div>

					<!-- Email -->
					<div class="flex items-center gap-3 justify-center md:justify-start">
						<div class="flex-shrink-0 w-5 h-5 md:w-6 md:h-6">
							<Mail class="w-full h-full text-pink-400" />
						</div>
						<a
							href="mailto:info@sugarbloom.com"
							class="text-gray-300 hover:text-pink-400 transition-all duration-300 text-sm md:text-base hover:translate-x-1"
						>
							info@sugarbloom.com
						</a>
					</div>

					<!-- Horarios -->
					<div class="flex items-start gap-3 justify-center md:justify-start">
						<div class="flex-shrink-0 w-5 h-5 md:w-6 md:h-6 mt-1">
							<Clock class="w-full h-full text-pink-400" />
						</div>
						<p class="text-gray-300 text-sm md:text-base">
							Lun - Sáb: 8:00 AM - 8:00 PM
						</p>
					</div>
				</div>
			</div>
		</div>

		<!-- Línea divisoria -->
		<div class="border-t border-gray-700 mt-8 md:mt-12 pt-6 md:pt-8">
			<!-- Copyright -->
			<div class="text-center">
				<p class="text-gray-400 text-sm md:text-base">
					© {currentYear} SugarBloom. Todos los derechos reservados.
				</p>
			</div>
		</div>
	</div>
</footer>
