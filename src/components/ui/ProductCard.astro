---
export interface Props {
  image: string
  title: string
  description: string
  price?: string
  alt?: string
  message?: string
}

const { image, title, description, price, alt, message } = Astro.props
---

<div
  class="bg-white rounded-2xl shadow-lg overflow-hidden group hover:shadow-xl transition-all duration-500 ease-[cubic-bezier(0.25,0.1,0.25,1)] hover:-translate-y-2"
>
  <!-- Imagen -->
  <div class="relative overflow-hidden">
    <img
      src={image}
      alt={alt || title}
      class="w-full h-48 md:h-56 object-cover group-hover:scale-110 transition-transform duration-500 ease-[cubic-bezier(0.25,0.1,0.25,1)]"
      loading="lazy"
    />
    <!-- Overlay sutil en hover -->
    <div
      class="absolute inset-0 bg-gradient-to-t from-pink-500/20 via-pink-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"
    ></div>
  </div>

  <!-- Contenido -->
  <div class="p-6 space-y-4">
    <h3
      class="text-xl md:text-2xl font-bold text-pink-400 group-hover:text-pink-600 transition-colors duration-500"
    >
      {title}
    </h3>

    <p class="text-gray-600 text-sm md:text-base leading-relaxed group-hover:text-gray-800 transition-colors duration-300">
      {description}
    </p>

    {price && <p class="text-pink-500 font-medium">{price}</p>}

    <div class="pt-2">
      <a 
      href={`https://wa.me/584126539866?text=${encodeURIComponent(message || `Hola, me interesa pedir ${title}`)}`}
        class="inline-block bg-pink-500 hover:bg-pink-600 text-white font-bold py-2 px-6 rounded-full transition-colors duration-300"
        target="_blank"
        rel="noopener noreferrer"
      >
        Pedir
      </a>
    </div>
  </div>
</div>